{
  "name": "LSDM",
  "version": "1.0.0",
  "description": "London School of Digital Marketing website",
  "main": "index.js",
  "author": "Sanpo Chew",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ],
        "presets": [
          [
            "env",
            {
              "targets": {
                "chrome": true
              }
            }
          ]
        ]
      }
    },
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "directus": {
    "dev": "https://londonschoolofdigitalmarketing.com/directus/api",
    "prod": "http://localhost:8000/api"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "import"
    ],
    "rules": {
      "no-param-reassign": "off",
      "no-unused-expressions": [
        "error",
        {
          "allowTernary": true
        }
      ]
    },
    "settings": {
      "import/resolver": "webpack"
    }
  },
  "scripts": {
    "test": "BABEL_ENV=test karma start",
    "browsersync": "browser-sync start --config browsersync.config.js",
    "start:dev": "concurrently \"webpack --env.dev\" \"npm run browsersync\" \"nodemon index.js | bunyan\"",
    "prestart": "webpack",
    "start": "NODE_ENV=production node --harmony index.js | bunyan"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bootstrap": "v4.0.0-alpha.6",
    "bunyan": "^1.8.5",
    "co": "^4.6.0",
    "cookieconsent2": "^1.0.10-2",
    "directus-sdk-javascript": "^1.1.3",
    "dotenv": "^4.0.0",
    "hubspot": "^0.4.3",
    "hyperform": "^0.9.1",
    "koa": "^2.0.1",
    "koa-better-body": "^3.0.2",
    "koa-convert": "^1.2.0",
    "koa-hbs": "^0.9.0",
    "koa-router": "next",
    "mailgun-js": "^0.8.2",
    "request": "^2.78.0",
    "smoothscroll-polyfill": "^0.3.4",
    "stripe": "^4.14.0",
    "svg4everybody": "^2.1.4",
    "swiper": "^3.4.0",
    "validator": "^7.0.0",
    "whatwg-fetch": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-rewire": "^1.0.0",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.22.0",
    "babel-template": "^6.22.0",
    "babel-types": "^6.22.0",
    "browser-sync": "^2.18.8",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "clean-webpack-plugin": "^0.1.15",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "karma": "^1.4.1",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0",
    "proxy-middleware": "^0.15.0",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.2",
    "webpack": "^v2.2.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-node-externals": "^1.5.4"
  }
}
